package ej102;

public class persona {
	private String tipo;
	private String nombre;
	private int edad;
	private int oscars;
	static int numactores=0;
	static int numdirectores=0;
	static int numproductores=0;
	
	public persona (String tipo, String nombre, int edad, int oscars) {
		this.tipo=tipo;
		this.nombre=nombre;
		this.edad=edad;
		this.oscars=oscars;
		if (tipo=="Director") {
			numdirectores++;
		}
		if (tipo=="Actor") {
			numactores++;
		}
		if (tipo=="Productor") {
			numactores++;
		}
		
		
	}

	public String getTipo() {
		return tipo;
	}

	public String getNombre() {
		return nombre;
	}

	public int getOscars() {
		return oscars;
	}
}
